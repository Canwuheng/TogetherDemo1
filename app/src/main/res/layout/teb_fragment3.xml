<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="红绿灯信息管理"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="排序："
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>
        <Spinner
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sp_light"
            android:layout_width="200dp"
            android:layout_height="28dp"/>
        <Button
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_find"
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="35dp"/>
    </LinearLayout>
    <TableLayout
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_weight="1"
                android:text="路口"
                style="@style/row_title"
                />
            <TextView
                style="@style/row_title"
                android:layout_weight="1"

                android:text="红灯时长(S)"
                />
            <TextView
                style="@style/row_title"
                android:layout_weight="1"
                android:text="黄灯时长(S)"
                />
            <TextView
                style="@style/row_title"
                android:layout_weight="1"
                android:text="绿灯时长(S)"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:id="@+id/table_row_one"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/road_one"
                android:layout_weight="1"
                android:text="1"
                style="@style/row_title"
                />
            <TextView
                android:id="@+id/red_one"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="9"
                />
            <TextView
                android:id="@+id/yellow_one"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="9"
                />
            <TextView
                android:id="@+id/green_one"
                style="@style/row_title"
                android:layout_weight="1"

                android:text="9"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:id="@+id/table_row_two"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/road_two"
                android:layout_weight="1"
                android:text="2"
                style="@style/row_title"
                />
            <TextView
                android:id="@+id/red_two"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="8"
                />
            <TextView
                android:id="@+id/yellow_two"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="8"
                />
            <TextView
                android:id="@+id/green_two"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="8"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:id="@+id/table_row_three"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/road_three"
                android:layout_weight="1"
                android:text="3"
                style="@style/row_title"
                />
            <TextView
                android:id="@+id/red_three"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="7"
                />
            <TextView
                android:id="@+id/yellow_three"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="9"
                />
            <TextView
                android:id="@+id/green_three"
                style="@style/row_title"
                android:layout_weight="1"
                android:text="7"
                />

        </TableRow>

    </TableLayout>
</LinearLayout>